<?xml version="1.0"?>
<robot name="simple_arm">

  <link name="wheel">
    <visual>
      <origin xyz="0 0 .25" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".25" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
      <inertial>
      <mass value=".1" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <inertia ixx="0.008333333333333335" ixy="0" ixz="0" iyy="0.043333333333333335" iyz="0" izz="0.04833333333333334" />
    </inertial>
  </link>

  <link name="arm1">
    <visual>
      <origin xyz="1 0 .0" rpy="0 1.57 0"/>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
	   <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
      <inertial>
      <mass value="2" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <inertia ixx="0.008333333333333335" ixy="0" ixz="0" iyy="0.043333333333333335" iyz="0" izz="0.04833333333333334" />
    </inertial>
  </link>

  <link name="arm2">
    <visual>
      <origin xyz="1 .0 .0" rpy="0 1.57 0"/>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
	   <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
      <inertial>
      <mass value="2" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <inertia ixx="0.008333333333333335" ixy="0" ixz="0" iyy="0.043333333333333335" iyz="0" izz="0.04833333333333334" />
    </inertial>
  </link>

  <link name="arm3">
    <visual>
      <origin xyz="1 .0 .0" rpy="0 1.57 0"/>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
	   <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
      <inertial>
      <mass value="2" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <inertia ixx="0.008333333333333335" ixy="0" ixz="0" iyy="0.043333333333333335" iyz="0" izz="0.04833333333333334" />
    </inertial>
    </visual>
  </link>

<!--
-->


  <joint name="joint1" type="revolute">
    <parent link="wheel"/>
    <child link="arm1"/>
    <origin xyz="0 0 .25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="1"/>
  </joint>
  <joint name="joint2" type="revolute">
    <parent link="arm1"/>
    <child link="arm2"/>
    <origin xyz="2 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="1"/>
  </joint>
  <joint name="joint3" type="revolute">
    <parent link="arm2"/>
    <child link="arm3"/>
    <origin xyz="2.0 0. 0" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/> 
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

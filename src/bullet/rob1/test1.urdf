<?xml version="1.0"?>
<robot name="simple_arm">

  <link name="base">
    <visual>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1" radius="0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>
  </link>

  <link name="arm">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1" radius="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>
  </link>

  <joint name="joint2" type="continuous">
    <parent link="base"/>
    <child link="arm"/>
    <origin xyz="0 0 1" rpy="0 1.57 0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>

